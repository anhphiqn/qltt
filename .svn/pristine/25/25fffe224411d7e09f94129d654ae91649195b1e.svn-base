                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <label>Tên loại hình doanh nghiệp(*)</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <input class="form-control" name="name" id="name" value="<?php echo $this->item->getName(); ?>">
                                    </div>
                                    
                                </div>
