   <script type="text/javascript">
        function jsdelete(id)
        {            
            var flag;
            $.ajax({
                    type:'post',
                    url:'<?php echo $this->baseUrl()?>/default/sysdepartments/confirmdelete/id/'+id,
                    async:false,
                    dataType:'json',
                    success:function(a){
                        if(a==1){
                            flag=false;
                        } else {
                            flag=true;
                        }
                    }
            });
            if(flag==false){
                bootbox.alert("Phòng ban này đã có nhân viên. Không được phép xóa.");
                return false;
            };
            if(flag == true){
                bootbox.confirm("Bạn có chắc muốn xoá phòng ban này không?",function(result){
                    if(result == true)
                    { 
                        return window.location = "<?php echo $this->baseUrl() ?>/default/sysdepartments/delete/id/"+id;
                    }
                }); 
            }
            return true;
                
        }
    </script>
   