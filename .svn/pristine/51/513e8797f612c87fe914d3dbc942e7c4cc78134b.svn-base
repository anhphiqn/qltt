<script type="text/javascript">
            // When the document is ready
            $(document).ready(function () { 
                $("#usernames").val("");
                $("#passwords").val("");
                $('#jqxDateTimeInput').jqxDateTimeInput({ formatString: "dd-MM-yyyy"});
                var formatString = $('#jqxDateTimeInput').jqxDateTimeInput('formatString');
                $('#jqxDateTimeInput').on('valueChanged', function (event) {
                    var date = event.args.date;
                    var text= $('#jqxDateTimeInput').jqxDateTimeInput('getText'); 
                     $('#birthday').val(text);
                });
                $('#jqxDateTimeInput').on('open', function (event) {
                    var date = event.args.date;
                });
                $('#jqxDateTimeInput').on('close', function (event) {
                    var date = event.args.date;
                });
                 $('#sys_user_group_id').multiselect({
                    maxHeight: '300',
                    enableFiltering: true,
                    maxHeight: '300',
                    onChange: function(option, checked) {
                        if (checked) {
                            orderCount++;
                            $(option).data('order', orderCount);
                        }
                        else {
                            $(option).data('order', '');
                        }
                    },
                });

                $('#sys_user_group_id').on('change', function() {
                    var selected = [];
                    $('#sys_user_group_id option:selected').each(function() {
                        selected.push([$(this).val(), $(this).data('order')]);
                    });

                    selected.sort(function(a, b) {
                        return a[1] - b[1];
                    });

                    var text = '';
                    for (var i = 0; i < selected.length; i++) {
                        text += selected[i][0] + ', ';
                    }
                    text = text.substring(0, text.length - 2);

                    $('#selectionlog').val(text);
                    $('#selectionlog').text(text);
                });
                $("#is_leader").on('mouseenter',function(data){
//                    bootbox.alert("Tên đăng nhập đã tồn tại.Vui lòng kiểm tra và nhập lại.");
                    var flag;
                    var sys_department= $('#sys_department_id').val();
                    if(sys_department == ""){
                        bootbox.alert("Chọn phòng ban trước khi chọn trưởng phòng.");
                    }
                    if(sys_department != ""){
                        $.ajax({
                            type:'post',
                            url:'<?php echo $this->baseUrl()?>/master/sysuser/checkisleader/sys_department/'+sys_department,
                            async:false,
                            dataType:'json',
                            success:function(data){
                                if(data[0].code==1){
                                    flag=false;
                                } else {
                                    flag=true;
                                }
                            }
                        });
                    }
                    if(flag == false){
                         bootbox.alert("Phòng này đã có trưởng phòng.Vui lòng kiểm tra và nhập lại.");
//                        return false;
                    }
                });
            });
</script>
<script type="text/javascript">
    document.forms['Addsysuser'].name.focus();
    function set_focus() {
        document.forms['Addsysuser'].name.focus();
    }
    function checkinput() {        
        var frm = window.document.Addsysuser;
        var flag;
        if (frm.first_name.value == "") {
            bootbox.alert("Vui lòng nhập họ và tên đệm!");
            return false;
        } 
        if (frm.last_name.value == "") {
            bootbox.alert("Vui lòng nhập tên!");
            return false;
        }
            var user_name= $('#username').val();
            if(user_name != ""){
            $.ajax({
                type:'post',
                url:'<?php echo $this->baseUrl()?>/master/sysuser/checkusername/username/'+user_name,
                async:false,
                dataType:'json',
                success:function(data){
                    if(data[0].code==1){
                        flag=false;
                    } else {
                        flag=true;
                    }
                }
            });
            }
        if(flag==false){
            bootbox.alert("Tên đăng nhập đã tồn tại.Vui lòng kiểm tra và nhập lại.");
            return false;
        };
        if (frm.email.value == "") {
            bootbox.alert("Vui lòng nhập email cho nhân viên");
            return false;
        };
        if(isNaN(frm.email.value)== false){
            bootbox.alert("Vui lòng nhập email bằng chữ");
            return false;
        } 
        
        if (frm.cellphone.value == "") {
            bootbox.alert("Vui lòng nhập số điện thoại cho nhân viên");
            return false;
        };
        if(isNaN(frm.cellphone.value)== true){
            bootbox.alert("Vui lòng nhập số điện thoại bằng số");
            return false;
        }  
        if ($('#sys_department_id').val() == "") {
            bootbox.alert("Vui lòng chọn phòng ban cấp trên");
            return false;
        }; 
        
        if (($('#master_province_id').val() == 0)) {
            bootbox.alert("Vui lòng chọn tỉnh thành");
            return false;
        }; 
        if (($('#master_district_id').val() == 0)) {
            bootbox.alert("Vui lòng chọn quận huyện");
            return false;
        }; 
        if (($('#master_ward_id').val() == 0)) {
            bootbox.alert("Vui chọn xã phường");
            return false;
        }; 
        
        
        
        
        return true;
    }
</script>
<script type="text/javascript">
        $(document).ready(function () {
            $("#dropDownButton").jqxDropDownButton({ width: 200, height: 25,theme: 'bootstrap'});
            $('#jqxTree').on('select', function (event) {
                var args = event.args;
                var item = $('#jqxTree').jqxTree('getItem', args.element);
                var dropDownContent = '<div style="position: relative; margin-left: 3px; margin-top: 5px;">' + item.label + '</div>';
                $("#dropDownButton").jqxDropDownButton('setContent', dropDownContent);
                 $("#sys_department_id").val(event.args.element.id);
             
            });
            $("#jqxTree").jqxTree({ width: 200, height: 220,theme: 'bootstrap'});
        });
</script>