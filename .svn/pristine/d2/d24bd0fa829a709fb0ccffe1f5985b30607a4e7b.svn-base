            <div class="panel-body">
                <div class="table-reponsive">
                    <div id="jqxgrid">

                    </div>
                </div>
            </div>
    </div>
</div>
<script type="text/javascript">
        $(document).ready(function () {
            // prepare the data
            var source =
            {
                datatype: "json",
                datafields:
                [
                    { name: 'Id',type:'int'},
                    { name: 'code', type: 'string' }, 
                    { name: 'name', type: 'string' },                    
//                    { name: 'order', type: 'int' }
                ],
                url:"<?php echo $this->baseUrl().'/leader/masterbusinesstype/service'?>",
                sortcolumn: 'code',
                sortdirection: 'asc'
               
            };
         var dataAdapter = new $.jqx.dataAdapter(source, {
                loadComplete: function () {
                }
            });
            $("#jqxgrid").jqxGrid(
            {
                width: '100%',
                source: dataAdapter,  
                theme: 'bootstrap',
                pageable: true,
                showfilterrow: true,
                filterable: true,
                autoheight: true,
                sortable: true,
                altrows: true,
                enabletooltips: true,
                selectionmode: 'multiplecellsadvanced',
                columnsResize: true,
                rendergridrows: function (params) {
                    return params.data;
                },
                ready: function () {
                    $("#jqxgrid").jqxGrid('hideColumn', 'Id');
                },
                columns: [
                  {text:'Id',dataField:'Id',cellsalgin:'right',width:0},
                  { text: 'Mã Code',editable: false, dataField: 'code', width: '30%' },
                  { text: 'Tên loại hình doanh nghiệp',editable: false, dataField: 'name', width: '60%' },                 
//                  { text: 'Thứ tự', editable: false, dataField: 'order', width: '10%' },
                  {text: 'Xóa',filtertype: 'none', cellsalign: 'right', align: "center", columnType: 'none', editable: false, sortable: false, dataField: null, cellsrenderer: function (row) {
                          // render custom column.
                          editrow = row;
                          var dataRecord = $("#jqxgrid").jqxGrid('getrowdata',editrow);
                          var url= "<div style='overflow: hidden; text-overflow: ellipsis; padding-bottom: 2px; text-align: center; margin-right: 2px; margin-left: 4px; margin-top: 4px;'><a class='fa fa-trash-o fa-lg'";
                          url = url + "href='#' onclick='return jsdelete("+dataRecord.Id+")'></a></div>"
                          return url;
                      }
              },
              {text: 'Sửa',filtertype: 'none', cellsalign: 'right', align: "center", columnType: 'none', editable: false, sortable: false, dataField: null, cellsrenderer: function (row) {
                          // render custom column.
                          editrow = row;
                          var dataRecord = $("#jqxgrid").jqxGrid('getrowdata',editrow);
                          var url= "<div style='overflow: hidden; text-overflow: ellipsis; padding-bottom: 2px; text-align: center; margin-right: 2px; margin-left: 4px; margin-top: 4px;'><a class='fa fa-edit fa-lg'";
                          url = url + "href='<?php echo $this->baseUrl() ?>/leader/masterbusinesstype/edit/id/"+dataRecord.Id+"'></a></div>"
                          return url;
                      }
                          }
                ]
            });
           
        });
    </script>
    <script type="text/javascript">
        function jsdelete(id)
        {            
            var flag;
            $.ajax({
                    type:'post',
                    url:'<?php echo $this->baseUrl()?>/leader/masterbusinesstype/confirmdelete/id/'+id,
                    async:false,
                    dataType:'json',
                    success:function(a){
                        if(a==1){
                            flag=false;
                        } else {
                            flag=true;
                        }
                    }
            });
            if(flag==false){
                bootbox.alert("Loại hình doanh nghiệp này đã sử dụng. Không được phép xóa.");
                return false;
            };
            if(flag == true){
                bootbox.confirm("Bạn có chắc muốn xoá tên loại hình doanh nghiệp này không?",function(result){
                    if(result == true)
                    { 
                        return window.location = "<?php echo $this->baseUrl() ?>/leader/masterbusinesstype/delete/id/"+id;
                    }
                }); 
            }
            return true;
                
        }
    </script>