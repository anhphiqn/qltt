<script type="text/javascript">
    document.forms['Editdoc_diary'].implementers.focus();
    function set_focus() {
        document.forms['Editdoc_diary'].implementers.focus();
    }
    
    function checkinput() {
        var frm = window.document.Editdoc_diary;
        if (frm.implementers.value == "") {
            bootbox.alert("Vui lòng nhập tên KSV");
            return false;
        };
        if(isNaN(frm.implementers.value)== false){
            bootbox.alert("Vui lòng nhập tên KSV bằng chữ");
            return false;
        }  
        
        if (frm.position.value == "") {
            bootbox.alert("Vui lòng nhập chức danh cho KSV");
            return false;
        };
        if(isNaN(frm.position.value)== false){
            bootbox.alert("Vui lòng nhập tên chức danh cho KSV");
            return false;
        }
        
        if (frm.content_inspection.value == "") {
            bootbox.alert("Vui lòng nhập nội dung kiểm tra");
            return false;
        };
        if(isNaN(frm.content_inspection.value)== false){
            bootbox.alert("Vui lòng nhập nội dung kiểm tra  bằng chữ");
            return false;
        }
        
        if (frm.time_check.value == "") {
            bootbox.alert("Vui lòng nhập thời gian kiểm tra");
            return false;
        };
        if(isNaN(frm.time_check.value)== false){
            bootbox.alert("Vui lòng nhập thời gian kiểm tra bằng chữ");
            return false;
        }
        
        if (frm.status_and_test_results.value == "") {
            bootbox.alert("Vui lòng nhập tình hình và kết quả kiểm tra");
            return false;
        };
        if(isNaN(frm.status_and_test_results.value)== false){
            bootbox.alert("Vui lòng nhập tình hình và kết quả kiểm tra bằng chữ");
            return false;
        }
        
        if (frm.processing_results.value == "") {
            bootbox.alert("Vui lòng nhập kết quả xử lý");
            return false;
        };
        if(isNaN(frm.processing_results.value)== false){
            bootbox.alert("Vui lòng nhập kết quả xử lý");
            return false;
        }
        
       
      return true;
    }
</script>
